<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acidictadpole.eveindustrymonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" 
        android:label="EveIndustryMonitor"
        >
        <activity
            android:name="com.acidictadpole.eveindustrymonitor.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="SettingsActivity" android:label="Settings"></activity>
        <activity android:name="ApiActivity" android:label="APIs"></activity>
        <activity android:name="ApiAddActivity" android:label="Add Api"></activity>
        
        <uses-library android:name="android.test.runner" />
    </application>
    
    <instrumentation android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.acidictadpole.eveindustrymonitor"
        android:label="TestLabel"/>
    
    

</manifest>
